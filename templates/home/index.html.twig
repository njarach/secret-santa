{% extends 'base.html.twig' %}

{% block title %}Accueil - Secret Santa{% endblock %}

{% block body %}
    <main>
        <div class="min-h-screen py-6 flex flex-col justify-center sm:py-12">
            <div class="container mx-auto px-4">
                <div class="text-center mb-12">
                    <h1 class="text-4xl font-bold text-red-600 mb-4">Bienvenue sur Secret Santa</h1>
                    <p class="text-gray-600 text-lg">Organisez facilement votre échange de cadeaux !</p>
                </div>

                <div class="grid max-w-4xl mx-auto">
                    <!-- Section: Créer un nouvel événement -->
                    <div class="relative">
                        <div class="absolute inset-0 bg-gradient-to-r from-red-600 to-red-700 shadow-lg transform -skew-y-3 sm:skew-y-0 sm:-rotate-3 sm:rounded-3xl"></div>
                        <div class="relative px-6 py-8 bg-white shadow-lg sm:rounded-3xl sm:p-10">
                            <h2 class="text-2xl font-bold text-gray-800 mb-4 text-center">Créer un nouvel événement</h2>
                            <p class="text-gray-600 text-center mb-6">
                                Lancez un nouveau Secret Santa et invitez vos amis, famille ou collègues
                            </p>
                            <a role="button" href="{{ path('app_new_event') }}"
                                class="block bg-white text-gray-900 hover:bg-red-600 hover:text-white focus:ring-4 focus:outline-none focus:ring-red-600-light font-medium rounded-lg text-sm px-5 py-2.5 text-center transition-all duration-200 ease-in-out shadow-lg hover:shadow-xl">
                                <img src="{{ asset('images/santa-face.png') }}" class="m-0 mb-2 mx-auto" alt="Image de père noël">
                                <span class="block mt-2 font-semibold">Créer mon événement</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
