{% extends 'base.html.twig' %}

{% block body %}
    <section class="max-w-2xl px-6 py-8 mx-auto bg-white dark:bg-gray-900">
        <header>
            <a href="#">
                <img src="{{ asset('images/santa-face.png') }}" alt="Visage de père noël">
            </a>
        </header>

        <main class="mt-8">
            <h2 class="text-gray-700 dark:text-gray-200">Bonjour {{ participant.name }},</h2>

            <p class="mt-2 leading-loose text-gray-600 dark:text-gray-300">
                Vous avez été invité par {{ admin.name }} a rejoindre un évènement sur <span class="font-semibold text-red-600">Secret Santa</span>.
            </p>

            <button
                class="px-6 py-2 mt-4 text-sm font-medium tracking-wider text-white capitalize transition-colors duration-300 transform bg-blue-600 rounded-lg hover:bg-blue-500 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-80">
                Accepter l'invitation
            </button>

        </main>


        <footer class="mt-8">
            <p class="mt-3 text-gray-500 dark:text-gray-400">© 2025 Nicolas Jarach Dev, Secret Santa.</p>
        </footer>
    </section>
{% endblock %}
