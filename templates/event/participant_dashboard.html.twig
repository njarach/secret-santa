                    <form hx-post="{{ path('app_participant_add_exclusion', {'id': participant.id}) }}"
                          hx-target="#exclusions-list"
                          hx-swap="innerHTML"
                          class="flex gap-2">
                        <input type="text"
                               name="exclusion"
                               placeholder="Nom de la personne"
                               required
