{% extends 'base.html.twig' %}

{% block body %}
    <div class="min-h-screen py-6 px-4 sm:px-6 lg:px-8" id="admin-dashboard-container">
        <div class="max-w-4xl mx-auto">
            <!-- En-tÃªte -->
            <div class="bg-white rounded-lg shadow-lg overflow-hidden mb-6">
                <div class="bg-gradient-to-r from-red-600 to-red-700 px-6 py-4">
                    <h1 class="text-2xl font-bold text-white">ðŸŽ„ Dashboard Admin</h1>
                    <p class="text-red-100 mt-1">{{ event.name }}</p>
                </div>

                <div class="p-6">
                    <div class="grid md:grid-cols-2 gap-4">
                        {% if event.description %}
                            <div>
                                <p class="text-sm text-gray-600 font-medium">Description</p>
                                <p class="text-gray-900">{{ event.description }}</p>
                            </div>
                        {% endif %}

                        {% if event.budget %}
                            <div>
                                <p class="text-sm text-gray-600 font-medium">Budget</p>
                                <p class="text-gray-900">{{ event.budget|number_format(2, ',', ' ') }} â‚¬</p>
                            </div>
                        {% endif %}

                        <div>
                            <p class="text-sm text-gray-600 font-medium">Statut</p>
                            <span class="inline-block px-3 py-1 rounded-full text-sm font-medium
                            {% if event.status.value == 'active' %}bg-green-100 text-green-800
                            {% elseif event.status.value == 'draft' %}bg-yellow-100 text-yellow-800
                            {% elseif event.status.value == 'drawn' %}bg-blue-100 text-blue-800
                            {% elseif event.status.value == 'closed' %}bg-gray-100 text-gray-800
                            {% else %}bg-red-100 text-red-800{% endif %}">
                            {{ event.status.value|upper }}
                        </span>
                        </div>

                        <div>
                            <p class="text-sm text-gray-600 font-medium">Participants</p>
                            <p class="text-gray-900 font-semibold">{{ participants|length }}</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions rapides -->
            <div class="grid md:grid-cols-2 gap-4 mb-6">
                <a href="{{ path('app_event_invitation', {'id': event.id}) }}"
                   class="block bg-white rounded-lg shadow hover:shadow-lg transition-shadow p-6 border-2 border-transparent hover:border-green-500">
                    <div class="flex items-center">
                        <div class="bg-green-100 rounded-full p-3">
                            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                            </svg>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-lg font-semibold text-gray-900">Inviter des participants</h3>
                            <p class="text-sm text-gray-600">Ajouter de nouvelles personnes Ã  l'Ã©vÃ©nement</p>
                        </div>
                    </div>
                </a>

                <div class="block bg-gray-100 rounded-lg shadow p-6 border-2 border-dashed border-gray-300 opacity-60">
                    <div class="flex items-center">
                        <div class="bg-gray-200 rounded-full p-3">
                            <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-lg font-semibold text-gray-500">Lancer le tirage</h3>
                            <p class="text-sm text-gray-500">Disponible prochainement</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Liste des participants -->
            <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
                    <h2 class="text-xl font-bold text-gray-900">ðŸ‘¥ Liste des participants</h2>
                </div>

                <div class="divide-y divide-gray-200">
                    {% if participants is empty %}
                        <div class="px-6 py-8 text-center text-gray-500">
                            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                            </svg>
                            <p class="mt-2">Aucun participant pour le moment</p>
                            <a href="{{ path('app_event_invitation', {'id': event.id}) }}"
                               class="mt-4 inline-block text-red-600 hover:text-red-800 font-medium">
                                Inviter des participants â†’
                            </a>
                        </div>
                    {% else %}
                        {% set eventAdmin = null %}
                        {% for participant in participants %}
                            {% if participant.email == event.adminEmail %}
                                {% set eventAdmin = participant %}
                            {% endif %}
                            <div class="px-6 py-4 hover:bg-gray-50 transition-colors">
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center space-x-3">
                                        <div class="flex-shrink-0">
                                            <div class="w-10 h-10 bg-gradient-to-br from-red-400 to-red-600 rounded-full flex items-center justify-center text-white font-bold">
                                                {{ participant.name|slice(0, 1)|upper }}
                                            </div>
                                        </div>
                                        <div>
                                            <p class="text-sm font-medium text-gray-900">{{ participant.name }}</p>
                                            <p class="text-sm text-gray-500">{{ participant.email }}</p>
                                        </div>
                                    </div>
                                    <div class="bg-white rounded-lg shadow p-6 mb-6">
                                        {% include 'event/htmx_partials/_exclusions_list.html.twig' %}
                                    </div>
                                    <div class="flex items-center space-x-2">
                                        <button
                                            hx-delete="{{ path('app_remove_participant', {'id': participant.id}) }}"
                                            hx-confirm="ÃŠtes-vous sÃ»r de vouloir supprimer ce participant ?"
                                            hx-target="#admin-dashboard-container"
                                            hx-select="#admin-dashboard-container"
                                            hx-swap="outerHTML"
                                            class="text-red-600 hover:text-red-800"
                                        >
                                            X
                                        </button>
                                        {% if participant.email == event.adminEmail %}
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                Admin
                            </span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>

            {% if eventAdmin %}
            <!-- AccÃ¨s participant -->
            <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                        </svg>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-blue-800">Tu es aussi participant !</h3>
                        <p class="mt-1 text-sm text-blue-700">
                            En tant qu'organisateur, tu participes Ã©galement au Secret Santa.
                            <a href="{{ path('app_event_access', {'id': event.id, 'token' : eventAdmin.eventAccessToken}) }}" class="font-medium underline hover:text-blue-900">
                                Voir mon profil participant
                            </a>
                        </p>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block title %}Dashboard Admin - {{ event.name }}{% endblock %}
