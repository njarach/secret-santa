{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div hx-swap-oob="#flash-messages" class="p-4 mb-4 rounded-lg text-sm {% if label == 'success' %}bg-green-100 text-green-800{% elseif label == 'error' or label == 'danger' %}bg-red-100 text-red-800{% else %}bg-blue-100 text-blue-800{% endif %}"
             role="alert">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
